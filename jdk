# 1️⃣ Update package lists
sudo apt update

# 2️⃣ Install OpenJDK 17
sudo apt install openjdk-17-jdk -y

# 3️⃣ Set JAVA_HOME to JDK 17
export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
export PATH=$JAVA_HOME/bin:$PATH

# 4️⃣ Verify Java 17 is active
java -version
javac -version

# 5️⃣ Build your project
gradle clean build